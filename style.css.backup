/*HEADER */

.site-header{
    position: relative;
    background: url("images/PVBackground.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
    min-height: 175px;
	
}


.site-header h1{
	margin-top: 0;
}
.site-header h1 a{
    text-decoration: none;
    /*color: #5abdac;*/
	color: #cc6600;
    font-size: 200%;
	font-family: 'Roboto Condensed', sans-serif;
	padding: 20px;
}

.site-header h3{
	font-family: 'Over the Rainbow', cursive;
    /*font-family: 'Shadows Into Light Two', cursive;*/
	/*font-family: 'Kaushan Script', cursive;*/
	color: #cc6600;

	padding-left: 80px;
}

.site-nav{
    position: absolute;
    bottom: 0px;
    right: 50px;
	font-size: 25px;
    background-color: rgba(0,0,0,0.75);
	border-radius: 25px 25px 0 0;
	/*padding: 0 20px;*/
}

.site-nav ul li{
    display: block;
    float: left;
    position: relative;
	padding: 8px 0;

}

.site-nav li li{
	
	width: 100%;
	
}

.site-nav li a{
    display: block;
    padding: 0px 20px;
    color: #5abdac;
    text-decoration: none;

}

.site-nav ul > li:first-child{
	border-radius: 25px 0 0 0;
}

.site-nav ul > li:last-child{
	border-radius: 0 25px 0 0;
}

.site-nav a:hover{
	color: #cc6600;
	
}

.site-nav li.current-menu-item > a{
	color: #cc6600;
}

.site-nav ul ul{
    display: none;
    position: absolute;
    top: 40px;
	background-color: rgba(0,0,0,0.75);
	white-space: nowrap;
	font-size: 20px;
	z-index: 1;
    
}

.site-nav ul li:hover > ul{
    display: block;

}

.site-nav ul ul ul{
    
	right: 100%;
	top: 0; 
}


