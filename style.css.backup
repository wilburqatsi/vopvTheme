/*LATEST CHANGE*/

.site-nav ul{
    
    margin: 0;
    padding: 0;
    list-style-type: none;
}

.site-nav li{
    
    float: left;
}

.site-nav a{
    display: block;
    text-decoration: none;
    color: orange;
    padding: 10px 18px;
    
    font-size: 150%;
    
}

.site-nav a:hover{
    background-color: black;
    opacity: 0.5;
    color: orange;
}


header div, header nav{
    display: inline-block;
    vertical-align: top;
}

.site-header h1 a{
    text-decoration: none;
    font-family: 'Arial', sans-serif;
    color: orange;
    font-size: 150%;
}

header{
    background: url("images/PVBackground.jpg");
    background-repeat: no-repeat;
    background-size: auto;
    
    height: 20vh;
    border: 1px solid black;
        
}




